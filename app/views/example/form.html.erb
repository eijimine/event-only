<%= form_for @job_applications do |f| %>

  <div>
  Full Name: <br>
  <%= f.text_field :full_name %>
  </div>

  <div>
  Phone: <br>
  <%= f.phone_field :phone %>
  </div>

  <div>
  Hobby: <br>
  <%= f.text_field :hobby %>
  </div>

  <div>
  Available Date: <br>
  <%= f.number_field :years_experience %>
  </div>

  <div>
    <%= f.submit "Create Job application" %>
  </div>

<% end %>


